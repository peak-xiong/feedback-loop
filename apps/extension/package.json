{
  "name": "feedback-loop",
  "displayName": "Feedback Loop",
  "description": "Keep AI sessions flowing: collect next-step feedback via CLI â†” IDE dialog.",
  "version": "1.3.61",
  "license": "MIT",
  "publisher": "peak-xiong",
  "icon": "images/icon.png",
  "author": {
    "name": "Peak Xiong",
    "url": "https://github.com/peak-xiong"
  },
  "homepage": "https://github.com/peak-xiong/feedback-loop",
  "repository": {
    "type": "git",
    "url": "https://github.com/peak-xiong/feedback-loop"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "session",
    "workflow",
    "productivity",
    "inbox"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:feedbackLoop.statusView",
    "onCommand:feedbackLoop.showStatus",
    "onCommand:feedbackLoop.restart",
    "onCommand:feedbackLoop.openPanel",
    "onCommand:feedbackLoop.refreshSessions",
    "onCommand:feedbackLoop.reopenRequest",
    "onCommand:feedbackLoop.deleteRequest"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "feedbackLoop.showStatus",
        "title": "Feedback Loop: Show Status",
        "icon": "$(info)"
      },
      {
        "command": "feedbackLoop.restart",
        "title": "Feedback Loop: Restart",
        "icon": "$(refresh)"
      },
      {
        "command": "feedbackLoop.openPanel",
        "title": "Feedback Loop: Open Panel",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "feedbackLoop.refreshSessions",
        "title": "Feedback Loop: Refresh Sessions",
        "icon": "$(refresh)"
      },
      {
        "command": "feedbackLoop.reopenRequest",
        "title": "Feedback Loop: Reopen Request",
        "icon": "$(go-to-file)"
      },
      {
        "command": "feedbackLoop.deleteRequest",
        "title": "Feedback Loop: Delete Request",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "feedbackLoop",
          "title": "Feedback Loop",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "feedbackLoop": [
        {
          "id": "feedbackLoop.statusView",
          "name": "Feedback Loop",
          "icon": "images/icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "feedbackLoop.refreshSessions",
          "when": "view == feedbackLoop.statusView",
          "group": "navigation@1"
        },
        {
          "command": "feedbackLoop.restart",
          "when": "view == feedbackLoop.statusView",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "feedbackLoop.reopenRequest",
          "when": "view == feedbackLoop.statusView && viewItem == requestPending",
          "group": "inline@1"
        },
        {
          "command": "feedbackLoop.deleteRequest",
          "when": "view == feedbackLoop.statusView && viewItem == requestPending",
          "group": "inline@2"
        }
      ]
    },
    "configuration": {
      "title": "Feedback Loop",
      "properties": {
        "feedbackLoop.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the server when IDE opens"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "clean": "rm -rf dist",
    "compile": "npm run clean && tsc -p ./ && mkdir -p dist/views/dialog dist/views/shared && cp src/views/dialog/inbox.html dist/views/dialog/ && cp src/views/shared/design-system.css dist/views/shared/",
    "watch": "tsc -watch -p ./",
    "bump": "npm version patch --no-git-tag-version",
    "render:icon": "bash scripts/render-icon.sh",
    "package": "npm run bump && npm run compile && vsce package -o dist/feedback-loop.vsix",
    "release": "npm run package",
    "release:minor": "npm version minor --no-git-tag-version && npm run package",
    "release:major": "npm version major --no-git-tag-version && npm run package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "undici": "^5.28.4",
    "vsce": "^2.11.0"
  }
}
