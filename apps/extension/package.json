{
  "name": "feedback-loop",
  "displayName": "Feedback Loop",
  "description": "Keep AI sessions flowing: collect next-step feedback via CLI â†” IDE dialog.",
  "version": "1.3.20",
  "license": "MIT",
  "publisher": "peak-xiong",
  "icon": "images/icon.png",
  "author": {
    "name": "Peak Xiong",
    "url": "https://github.com/peak-xiong"
  },
  "homepage": "https://github.com/peak-xiong/feedback-loop",
  "repository": {
    "type": "git",
    "url": "https://github.com/peak-xiong/feedback-loop"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "session",
    "workflow",
    "productivity",
    "checkpoint"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ioUtil.showStatus",
        "title": "Feedback Loop: Show Status",
        "icon": "$(info)"
      },
      {
        "command": "ioUtil.restart",
        "title": "Feedback Loop: Restart",
        "icon": "$(refresh)"
      },
      {
        "command": "ioUtil.openPanel",
        "title": "Feedback Loop: Open Panel",
        "icon": "$(comment-discussion)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ioUtil",
          "title": "Feedback Loop",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "ioUtil": [
        {
          "type": "webview",
          "id": "ioUtil.statusView",
          "name": "Status Panel",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "configuration": {
      "title": "Feedback Loop",
      "properties": {
        "ioUtil.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the server when IDE opens"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "clean": "rm -rf dist",
    "compile": "npm run clean && tsc -p ./ && mkdir -p dist/views/dialog dist/views/sidebar dist/views/shared && cp src/views/dialog/checkpoint.html dist/views/dialog/ && cp src/views/sidebar/sidebar.html dist/views/sidebar/ && cp src/views/shared/design-system.css dist/views/shared/",
    "watch": "tsc -watch -p ./",
    "bump": "npm version patch --no-git-tag-version",
    "package": "npm run bump && npm run compile && vsce package -o dist/ && mv dist/*.vsix dist/feedback-loop.vsix",
    "release": "npm run package",
    "release:minor": "npm version minor --no-git-tag-version && npm run package",
    "release:major": "npm version major --no-git-tag-version && npm run package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "undici": "^5.28.4",
    "vsce": "^2.11.0"
  }
}
